@page
@model NutriTic.App.Frontend.Pages.ActualizarPacienteEmpleadoModel
@{
    Layout = "_LayoutEmpleadoAdmin";
}


<div class="card card-body mt-5">
    <div class="form-group col">
        <h2>Actualizacion de datos</h2>
    </div>
    
    <form method="post" class="mt-3">
    <div class="form-group col" hidden>
        <label asp-for="PacienteEmpleado.IdPacienteEmpleado"></label>
        <input class="form-control" asp-for="PacienteEmpleado.IdPacienteEmpleado" readonly>
    </div>
    <div class="form-group col" hidden>
        <label asp-for="Empleado.IdCargoEmpleado"></label>
        <input class="form-control" asp-for="Empleado.IdCargoEmpleado" readonly>
    </div>
    <div class="form-group col" hidden>
        <label asp-for="PacienteEmpleado.IdPaciente"></label>
        <input class="form-control" asp-for="PacienteEmpleado.IdPaciente" readonly>
    </div>
    <div class="form-group col">
        <label>Paciente</label>
        
        <input class="form-control" asp-for="Paciente.PrimerNombre" readonly>
    </div>
    <div class="form-group col">
        <Label>Empleados</Label>
        <Select asp-for="PacienteEmpleado.IdEmpleado" class="form-control"
            asp-items="@(new  SelectList(Model.Empleados,"IdEmpleado","NombreCompleto"))"></Select>       
    </div>
    <div  class="form-group col mt-4">
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a class="btn btn-secondary" asp-page="./ListarPacienteEmpleado">Volver</a>
    </div>
    
</form>
</div>

