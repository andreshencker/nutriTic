@page
@model NutriTic.App.Frontend.Pages.RegistroModel
@{
    
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="content-left">
                <img  src="/assets/nutricion1.jpg" alt="" style="width:100%">
            </div>
        </div>
        <div class="col-md-6">
            <div class="content-right">
                <div class="card card-body">
                <form action="" method="post">
                <h3 class="m-3 text-center">Registrese</h3>
                <div class="form-group">
                    <input asp-for="Paciente.IdPaciente" class="form-control" type="text" placeholder="Número Documento" required>
                </div>
                <div class="form-group">                    
                    <input asp-for="Paciente.PrimerNombre" class="form-control" type="text" placeholder="Primer Nombre" required>                 
                </div>
                <div class="form-group">
                    <input asp-for="Paciente.SegundoNombre" class="form-control"  type="text" placeholder="Segundo Nombre" required>
                </div>
                <div class="form-group">
                    <input asp-for="Paciente.PrimerApellido" class="form-control"  type="text" placeholder="Primer Apellido" required>
                </div>
                <div class="form-group">
                    <input asp-for="Paciente.SegundoApellido" class="form-control"  type="text" placeholder="Segundo Apellido" required>
                </div>
                <div class="form-group">
                    <input asp-for="Paciente.Correo" class="form-control"  type="email" placeholder="Correo" required name="" id="">
                </div>
                <div class="form-group">
                   <input asp-for="Paciente.Telefono" class="form-control" type="tel" placeholder="Telefono" required>
                </div>
                <div class="form-group">
                    <input  class="form-control"  type="text" placeholder="Dirección" >
                </div>                
                <div class="form-group">                  
                    <input asp-for="Paciente.Estatura" class="form-control"  type="text" placeholder="Estatura" required>        
                </div> 
                <div class="form-group">
                    <label for="">Fecha Nacimiento</label>
                    <input asp-for="Paciente.FechaNacimiento" class="form-control" type="date"  id=""  required> 
                </div>               
                <div class="form-group">
                    <a href="/Login/Login">Ya tienes cuenta?</a>
                </div>

                <div class="form-group">                          
                    <button class="form-control btn btn-primary btn-block" type="submit" >Aceptar</button>           
                </div>               
            </form>
            </div>            
            </div>
        </div>
    </div>
</div>