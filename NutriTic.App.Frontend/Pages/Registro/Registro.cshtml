@page
@model NutriTic.App.Frontend.Pages.RegistroModel
@{

}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="content-left">
                <img src="/assets/nutricion1.jpg" alt="" style="width:100%">
            </div>
        </div>
        <div class="col-md-6">
            <div class="content-right">
                <div class="card card-body">
                    <form action="" method="post">
                        <h3 class="m-3 text-center">Registrese</h3>
                        <div class="row">
                            <div class="form-group col">
                                <label asp-for="Paciente.IdPaciente"></label>
                                <input asp-for="Paciente.IdPaciente" class="form-control" type="text" required>
                            </div>
                            <div class="form-group col">
                                <label asp-for="Paciente.PrimerNombre"></label>
                                <input asp-for="Paciente.PrimerNombre" class="form-control" type="text">
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col">
                                <label asp-for="Paciente.SegundoNombre"></label>
                                <input asp-for="Paciente.SegundoNombre" class="form-control" type="text" required>
                            </div>
                            <div class="form-group col">
                                <label asp-for="Paciente.PrimerApellido"></label>
                                <input asp-for="Paciente.PrimerApellido" class="form-control" type="text" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col">
                                <label asp-for="Paciente.SegundoApellido"></label>
                                <input asp-for="Paciente.SegundoApellido" class="form-control" type="text" required>
                            </div>
                            <div class="form-group col">
                                <label asp-for="Paciente.Correo"></label>
                                <input asp-for="Paciente.Correo" class="form-control" type="email" required>
                            </div>

                        </div>

                        <div class="row">
                            <div class="form-group col">
                                <label asp-for="Paciente.Telefono"></label>
                                <input asp-for="Paciente.Telefono" class="form-control" type="tel" required>
                            </div>
                            <div class="form-group col">
                                <label for="">Dirección</label>
                                <input class="form-control" type="text">
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col">
                                <label asp-for="Paciente.Estatura"></label>
                                <input asp-for="Paciente.Estatura" class="form-control" type="text" required>
                            </div>
                            <div class="form-group col">
                                <label asp-for="Paciente.FechaNacimiento"></label>
                                <input asp-for="Paciente.FechaNacimiento" class="form-control" type="date" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <a href="/Login/Login">Ya tienes cuenta?</a>
                        </div>

                        <div class="form-group">
                            <button class="form-control btn btn-primary btn-block" type="submit">Aceptar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>